    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no")
    title data-tip.css
    link(rel="stylesheet" href="./dist/data-tip.css?time=#{time}")
    style.
      body {
        margin: 0;
        font: 16px/1.7 Helvetica;
        padding: 100px 0;
      }
      a {
        color: #4078c0;
        text-decoration: none;
      }
      .main {
        max-width: 500px;
        margin: 0 auto;
        padding: 0 10px;
      }
      .sec {
        margin-bottom: 40px;
      }
      h1 {
        margin: 0;
      }
      h2 {
        margin: 0 0 40px 0;
        font-size: 12px;
        border-bottom: 1px solid #e2e2e2;
        padding-bottom: 10px;
      }
      .underline {
        text-decoration: underline;
      }
      button {
        border: 1px solid #04be02;
        color: #04be02;
        padding: 10px 14px;
        display: block;
        border-radius: 3px;
        font-size: 18px;
        cursor: pointer;
        background-color: #fff;
        width: 100%;
        outline: none;
      }
      p > span {
        background-color: #04be02;
        color: white;
      }
      p.sep {
        border-bottom: 1px solid #e2e2e2;
        padding: 5px 0;
        font-weight: bold;
        font-size: 18px;
      }
      button.data-tip-danger {
        background-color: #b34e4d;
        border-color: #b34e4d;
        color: #fff;
      }
      button.data-tip-warning{
        background-color: #c09854;
        border-color: #c09854;
        color: #fff;
      }
      button.data-tip-info {
        background-color: #3986ac;
        border-color: #3986ac;
        color: #fff;
      }
      button.data-tip-success {
        background-color: #458746;
        border-color: #458746;
        color: #fff;
      }
      .doge {
        width: 80px;
        height: 80px;
        float: right;
      }
      @media screen and (max-width: 768px) {
        body {
          padding: 20px 0;
        }
      }
      .github-ribbon-container {
        width: 10em;
        height: 10em;
        overflow: hidden;
        position: absolute;
        top: 0;
        right: 0;
      }
      a.github-ribbon, a.github-ribbon:visited {
        color: #ecf0f1!important;
      }
      .github-ribbon {
        z-index: 10;
        display: block;
        text-decoration: none;
        background-color: #34495e;
        position: relative;
        left: -6em;
        height: 2em;
        width: 16em;
        text-align: center;
        line-height: 2.2em;
        font-family: Helvetica,Arial,sans-serif;
        -webkit-transform: translate(50%,-50%) rotate(45deg) translateY(6em);
        -moz-transform: translate(50%,-50%) rotate(45deg) translateY(6em);
        -o-transform: translate(50%,-50%) rotate(45deg) translateY(6em);
        -ms-transform: translate(50%,-50%) rotate(45deg) translateY(6em);
        transform: translate(50%,-50%) rotate(45deg) translateY(6em);
      }
